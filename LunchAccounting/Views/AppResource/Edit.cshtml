@model LunchAccounting.Models.AppResource

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Resource</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AppResource</legend>

        <div>
            @Html.HiddenFor(model => model.AppResource_id)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Resource)
            @Html.TextBoxFor(model => model.Resource, new { @class = "form-control " })
            @Html.ValidationMessageFor(model => model.Resource)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DefaultAccess)
            @Html.DropDownList("DefaultAccess", null, new { @class = "form-control " })
            @Html.ValidationMessageFor(model => model.DefaultAccess)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-sm btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-primary" })
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
