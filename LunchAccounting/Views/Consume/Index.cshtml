@model IEnumerable<LunchAccounting.Models.UserConsume>

@{
    ViewBag.Title = "User Consume";
}

<h2>User Consume</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsumerInfo.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsumeDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ConsumerInfo.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ConsumeDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserConsume_id }, new { @class = "btn btn-sm btn-info" }) 
            @Html.ActionLink("Details", "Details", new { id = item.UserConsume_id }, new { @class = "btn btn-sm btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.UserConsume_id }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
